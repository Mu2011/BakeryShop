@page
@model IndexModel
@{
  ViewData["Title"] = "Home page";
}

<div id="featuredProduct" class="row">
  <div class="col-sm-8">
    <img src="~/Images/Products/@Model.FeaturedProduct.IamgeName" alt="FeaturedProduct" class="img-fluid rounded" />
  </div>

  <div id="featuredProductInfo" class="col-sm-4">
    <div id="productInfo">
      <h2>@Model.FeaturedProduct.Name</h2>
      <p class="price">
        $@string.Format("{0:f}", Model.FeaturedProduct.Price)
      </p>
      <p class="description">
        @Model.FeaturedProduct.Description
      </p>
    </div>

    <div id="calltoAction">
      <a asp-page="/order" class="btn btn-danger order-button" title="Order @Model.FeaturedProduct.Name"
        asp-route-id="@Model.FeaturedProduct.ID">Order Now</a>
    </div>

  </div>
</div>

<div id="ProductWrapper" class="row">
  @foreach (var product in Model.Products)
  {
    <div class="col-sm-3">
      <a asp-page="/order" asp-route-id="@product.ID" title="Order @product.Name">
        <div class="productInfo">
          <h3>@product.Name</h3>
          <img src="~/Images/Products/@product.IamgeName" alt="ImageProduct" class="img-fluid rounded" />
          <p class="description">
            @product.Description
          </p>
        </div>
      </a>
      <div id="action">
        <p class="price float-left">
          $@string.Format("{0:f}", product.Price)
        </p>
        <a asp-page="/order" class="btn btn-danger order-button float-right" title="Order @product.Name"
          asp-route-id="@product.ID">Order Now</a>
      </div>
    </div>
  }
</div>